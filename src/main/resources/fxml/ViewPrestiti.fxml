<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="30.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.biblioteca.gruppo21.gui.ViewPrestitiController">
   <children>
      <VBox styleClass="content-card">
         <children>
            <Label styleClass="header-label" text="Operazioni di Sportello (Prestito / Restituzione)">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <HBox spacing="20.0">
               <children>
                  <TextField fx:id="txtIdentificativoUtente" promptText="Matricola o Cognome" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txtIsbnPrestito" promptText="ISBN Libro" HBox.hgrow="ALWAYS" />
                  
                  <DatePicker fx:id="pickerScadenza" promptText="Data Restituzione" prefWidth="150.0" />
                  
                  <Button onAction="#handleEffettuaPrestito" prefWidth="200.0" styleClass="btn-primary" text="REGISTRA PRESTITO" />
                  <Button onAction="#handleRestituzione" prefWidth="200.0" styleClass="btn-secondary" text="REGISTRA RESTITUZIONE" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label styleClass="header-label" text="Storico Movimenti">
               <VBox.margin>
                  <Insets bottom="15.0" top="10.0" />
               </VBox.margin>
            </Label>
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <TableView fx:id="tablePrestiti">
                     <columns>
                        <TableColumn fx:id="colMatricolaUtente" text="Utente" />
                        <TableColumn fx:id="colIsbnLibro" text="Libro" />
                        <TableColumn fx:id="colDataScadenza" text="Scadenza" />
                        <TableColumn fx:id="colStato" text="Stato" />
                     </columns>
                  </TableView>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</VBox>