<BorderPane fx:id="rootPane" prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #FFF8E7;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.biblioteca.gruppo21.gui.ViewMainController">
   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
   <left>
      <VBox alignment="TOP_CENTER" prefWidth="240.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom right, #003366, #0077BE); -fx-background-radius: 0 25 25 0;" BorderPane.alignment="CENTER">
         <children>
            <Label text="BIBLIOTECA&#10;UniSA" textAlignment="CENTER" textFill="#ffb347">
               <font>
                  <Font name="System Bold Italic" size="26.0" />
               </font>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
               <effect>
                  <DropShadow color="#0000004d" height="15.0" radius="7.0" width="15.0" />
               </effect>
            </Label>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="btnNavUtenti" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showViewUtenti" styleClass="nav-button" text="Area Utenti" />
                  <Button fx:id="btnNavLibri" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showViewLibri" styleClass="nav-button" text="Catalogo Libri" />
                  <Button fx:id="btnNavPrestiti" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showViewPrestiti" styleClass="nav-button" text="Gestione Prestiti" />
               </children>
               <padding>
                  <Insets top="50.0" />
               </padding>
            </VBox>
         </children>
         <effect>
            <DropShadow color="#00000066" radius="20.0" width="40.0" />
         </effect>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="contentArea" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </StackPane>
   </center>
</BorderPane>